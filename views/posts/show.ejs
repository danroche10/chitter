<html>
  <head>
    <meta charset="utf-8" />
    <title>Instaclone</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/posts">Posts</a>
    <% if(session.authenticated){ %>
    <a href="/logout" class="nav-item nav-link">Logout</a>
    <h1>Hello, <%= session.user.username %>!</h1>
    <% } else{ %>
    <a href="/" class="nav-item nav-link">Login</a>
    <a href="/signup" class="nav-item nav-link">Sign up</a>
    <% } %>
    <div>
    <li><%= selectedPost.text %></li>
    <li><%= numberOfLikes %> Likes</li>
    <form
      id="newLike"
      action="/posts/<%= selectedPost.id %>/like/new"
      method="POST"
    >
      <input type="submit" value="Like" />
    </form>
    <% comments.forEach((comment)=>{ %>
    <ul>
      <li><%= comment.text %></li>
    </ul>
    <% }) %>

    <form
      id="newComment"
      action="/posts/<%= selectedPost.id %>/comment/new"
      method="POST"
    >
      <input type="text" id="newCommentText" name="newCommentText" />
      <br />
      <input type="submit" value="Comment" />
    </form>
  </body>
</html>
