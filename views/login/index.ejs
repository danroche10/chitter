<html>
  <head>
    <meta charset="utf-8" />
    <title>Chitter</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:700,600"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div class="topnav">
      <a href="/posts">Posts</a>
      <a class="active" href="/login">Login</a>
      <a href="/signup">Sign up</a>
    </div>
    <% if(message.length > 0){ %>
      <div class="alert alert-sucess">
        <%= message %>
      <% } %>
    <form id="loginUser" action="/login" method="POST">
      <div class="box">
        <h1>Login</h1>
        <input
          type="text"
          id="username"
          name="username"
          class="username"
          placeholder="username"
        />
        <br />
        <input
          type="password"
          id="password"
          name="password"
          class="password"
          placeholder="password"
        />
        <br />
        <input type="submit" value="Login" class="btn" />
      </div>
    </form>
  </body>
</html>
